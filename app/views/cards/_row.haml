- guess = card.guess_for_game(game)
%tr.cards-index-single-row
  %td= card.question
  %td= card.answer
  %td= guess.times_correct
  %td= guess.due_to_repeat? ? 'Yes' : 'No'
  - if deck.created_by?(current_user)
    %td
      %a{ href: "/decks/#{deck.id}/cards/#{card.id}/edit" } Edit
    %td
      %form{ action: "/decks/#{deck.id}/cards/#{card.id}", method: 'POST' }
        %input{ type: 'hidden', name: '_method', value: 'DELETE' }
        %input.delete-link{ type: 'submit', value: 'Delete' }

